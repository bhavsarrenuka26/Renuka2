<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient_bg"
    tools:context=".RegisterPage">

    <TextView
        android:layout_width="197dp"
        android:layout_height="71dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/allura"
        android:text="AlignOra."
        android:textAlignment="center"
        android:textColor="@color/design_default_color_surface"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/nameEnter"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Full Name"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#1F1D1D" />

    <EditText
        android:id="@+id/enterMail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Email"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#161515" />

    <EditText
        android:id="@+id/enterPhone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:maxLength="10"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#2A2727" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColorHint="#2A2727"
        app:endIconMode="password_toggle"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/registerbutn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Register"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/alraedyTxt"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:layout_marginTop="20dp"
        android:onClick="loginPage"
        android:text="Already have an account? Login"
        android:textColor="@android:color/white"
        android:textSize="16sp" />



    <ProgressBar
        android:id="@+id/progessround"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</LinearLayout>
